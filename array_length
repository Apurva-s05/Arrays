/*Program to find the length of the character array*/

#include <iostream>
using namespace std;

int length(char n[]){
	int count=0;
	for(int i=0;n[i]!='\0';i++){
	count++;
	}
	return count;
}

int main() {
	char name[100];

	cout<<"Enter name:"<<endl;
	cin.getline(name,100);                
	cout<<"Name is: "<<name<<endl;

    cout<<"Length is: "<<length(name)<<endl;
	return 0;
}
